<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/order_db_idshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:text="ID:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/order_db_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/order_db_idshow"
        android:textColor="@color/colorPrimary"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/order_db_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="未完成"
        android:layout_marginLeft="5dip"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/order_db_id"
        android:layout_toStartOf="@+id/order_db_shu" />

    <TextView
        android:id="@+id/order_db_nameshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_db_idshow"
        android:layout_marginLeft="5dip"
        android:text="菜品名："
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_assignment_black_24dp"
        />

    <TextView
        android:id="@+id/order_db_name"
        android:layout_width="110dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_db_id"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/order_db_nameshow"
        android:layout_toEndOf="@+id/order_db_nameshow"
        android:textColor="#000000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/order_db_numshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textSize="15dp"
        android:text="数量："
        android:drawableLeft="@drawable/ic_whatshot_black_24dp"
        android:layout_alignTop="@+id/order_db_name"
        android:layout_toEndOf="@+id/order_db_name" />

    <TextView
        android:id="@+id/order_db_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="222"
        android:textColor="@color/red"
        android:layout_alignBottom="@+id/order_db_numshow"
        android:layout_toEndOf="@+id/order_db_numshow" />
    <TextView
        android:id="@+id/order_db_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="份"
        android:textColor="@color/red"
        android:layout_alignBottom="@+id/order_db_numshow"
        android:layout_toEndOf="@+id/order_db_num" />


</RelativeLayout>
