<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.menu.Topbar
        android:id="@+id/topbar1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorButton"
        custom:title1="上传菜品"
        custom:titleTextcolor="@color/colorwhite"
        custom:titleTextsize="20px"
        ></com.example.menu.Topbar>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="菜品名称"
        android:textSize="40px"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorblack"
        />
    <EditText
        android:id="@+id/logineditText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:hint="输入上传的菜品名称"
        />
    <TextView
        android:id="@+id/logintextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:textSize="40px"
        android:textColor="@color/colorblack"
        android:layout_below="@+id/logineditText4"
        />
    <EditText
        android:id="@+id/logineditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入此菜品价格"
        android:layout_below="@+id/logintextView1"
        />
    <TextView
        android:id="@+id/logintextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单位"
        android:textSize="40px"
        android:layout_below="@+id/logineditText1"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorblack"
        />
    <EditText
        android:id="@+id/logineditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入菜品单位（如“份”、“个”、“只”）"
        android:layout_below="@+id/logintextView2"
        />
    <TextView
        android:id="@+id/logintextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="40px"
        android:layout_below="@+id/logineditText2"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorblack"
        />
    <EditText
        android:id="@+id/logineditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入上传密码"
        android:layout_below="@+id/logintextView3"
        />

     <Button
         android:id="@+id/loginbutton1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/logineditText3"
         android:layout_marginTop="10dp"
         android:text="上传"
         android:textColor="@color/colorwhite"
         android:textSize="40px"
         android:background="@color/colorButton"></Button>

</RelativeLayout>
