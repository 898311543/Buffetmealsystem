<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_db_id"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/order_db_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/order_db_id"
        />

    <TextView
        android:id="@+id/order_db_price"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/order_db_name"
        />

    <TextView
        android:id="@+id/order_db_create_at"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/order_db_price"
        />

    <ImageButton
        android:id="@+id/item_btn_plus"
        android:layout_width="wrap_content"
        android:background="#0000"
        android:src="@drawable/plus"
        android:layout_below="@+id/order_db_create_at"
        android:paddingLeft="40dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/item_product_num"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:layout_below="@+id/order_db_create_at"
        android:layout_toRightOf="@id/item_btn_plus"
        />
    <ImageButton
        android:id="@+id/item_btn_minus"
        android:layout_width="wrap_content"
        android:background="#0000"
        android:src="@drawable/minus"
        android:layout_below="@+id/order_db_create_at"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_product_num"
        />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_product_num"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text=" 确定 "
        />

    <Button android:id="@+id/go_back_order_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=" 返 回 "
        android:layout_alignTop="@+id/order_btn"
        android:layout_toStartOf="@+id/order_db_create_at" />

</RelativeLayout>
