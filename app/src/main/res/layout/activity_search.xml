<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.a13051_000.buffetmealsystem.Topbar
        android:background="@color/colorButton"
        android:id="@+id/topbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:title1="搜索"
        custom:titleTextcolor="@color/colorwhite"
        custom:titleTextsize="9dp"
        ></com.example.a13051_000.buffetmealsystem.Topbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/undo2"
        />
    <com.example.a13051_000.buffetmealsystem.xml.ClearEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar1"
        android:hint="输入你想输入的餐品、店家等"
        android:height="60dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:text="搜索"
        android:textColor="@color/colorwhite"
        android:textSize="15dp"
        android:background="@color/colorButton"
        />

</RelativeLayout>
