<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    >
	<TextView
		android:id="@+id/order_db_idshow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="ID:"
		android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
		android:textSize="15dp"
		android:layout_marginLeft="5dip"
		/>

	<TextView
		android:id="@+id/order_db_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:layout_marginLeft="5dip"
		android:textColor="@color/shape2"
		android:layout_toRightOf="@+id/order_db_idshow"
		/>

	<TextView
		android:id="@+id/order_db_finish"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:text="12222"
		android:textColor="@color/colorwhite"
		android:background="#00CD66"
		android:drawableLeft="@drawable/ic_assignment_black_24dp2"
		android:layout_alignParentTop="true"
		android:layout_marginRight="15dp"
		android:layout_alignParentEnd="true" />

	<TextView
		android:id="@+id/order_db_nameshow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="菜品名："
		android:textSize="15dp"
		android:drawableLeft="@drawable/ic_assignment_black_24dp"
		android:layout_marginLeft="5dip"
		android:layout_marginTop="10dp"
		android:layout_below="@+id/order_db_idshow"
		/>
	   <TextView
		   android:id="@+id/order_db_name"
		   android:layout_width="110dp"
		   android:textSize="16dp"
		   android:layout_height="wrap_content"
		   android:layout_marginLeft="5dp"
		   android:layout_marginTop="10dp"
		   android:textColor="@color/colorblack"
		   android:layout_toRightOf="@+id/order_db_nameshow"
		   android:layout_below="@+id/order_db_id"
		   />

	<TextView
		android:id="@+id/order_db_shushow"
		android:layout_width="wrap_content"
		android:textSize="15dp"
		android:text="数量："
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:drawableLeft="@drawable/ic_whatshot_black_24dp"
		android:layout_alignTop="@+id/order_db_name"
		android:layout_below="@+id/order_db_finish"
		android:layout_toStartOf="@+id/order_db_num" />

	   <TextView
		   android:id="@+id/order_db_num"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_marginLeft="5dp"
		   android:textSize="15dp"
		   android:text="123"
		   android:textColor="@color/colorAccent"
		   android:layout_alignTop="@+id/order_db_shu"
		   android:layout_toStartOf="@+id/order_db_shu" />
	<TextView
		android:id="@+id/order_db_shu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15dp"
		android:text="份"
		android:layout_marginRight="15dp"
		android:textColor="@color/colorAccent"
		android:layout_alignBottom="@+id/order_db_name"
		android:layout_alignParentEnd="true" />
</RelativeLayout>
