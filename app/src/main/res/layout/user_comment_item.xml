<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/user_comment_nameshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        />

    <TextView
        android:id="@+id/user_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorblack"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/user_comment_nameshow"
        />
    <TextView
        android:id="@+id/user_comment_cshow"
        android:layout_width="80dp"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="评论："
        android:layout_marginLeft="5dip"
        android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
        android:layout_below="@+id/user_comment_name"
        />

    <TextView
        android:id="@+id/user_comment_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_comment_cshow"
        android:layout_toEndOf="@+id/user_comment_cshow"
        android:ellipsize="end"
        android:maxLines="4"
        />

    <TextView
        android:id="@+id/time_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
         />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/time"
        android:layout_toEndOf="@+id/time_show"
        android:layout_alignTop="@+id/time_show"
        />

</RelativeLayout>
