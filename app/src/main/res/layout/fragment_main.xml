<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/qrcode"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_marginStart="320dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/search"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar1"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >
            <com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend
                android:id="@+id/slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linearlayout_news_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearlayout_images_slide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relativelayout_image_slide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:focusable="true" >

                            <android.support.v4.view.ViewPager
                                android:id="@+id/image_slide_page"
                                android:layout_width="fill_parent"
                                android:layout_height="200dip"
                                android:focusable="true" />

                            <RelativeLayout
                                android:id="@+id/layout_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:background="#55000000"
                                >

                                <RelativeLayout
                                    android:id="@+id/layout_bar_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/image_page_bg" >
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/tvSlideTitle"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:text="@string/title1"
                                        android:textColor="@android:color/white"
                                        android:textSize="13dip"
                                        />

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/slide_dian"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="vertical"
                            android:background="@android:color/white">

                            <LinearLayout
                                android:id="@+id/layout_circle_images"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="15dp"
                                android:gravity="right"
                                android:orientation="horizontal">

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/slide"
                android:background="@color/colorwhite"
                android:layout_marginTop="2dp"
                >
                <FrameLayout
                    android:id="@+id/layout_at"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/toast"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/toaster"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中式餐厅"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_at2"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/meet"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/meet"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西式餐厅"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at3"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/pizza"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pizza"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="披萨店"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at4"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/drink"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/drop"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="酒吧"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at5"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/quickfood"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/muffin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快餐点"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/layout1"
                android:background="@color/colorwhite"
                android:layout_marginTop="2dp"
                >
                <FrameLayout
                    android:id="@+id/layout_at11"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/map"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/map"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_at12"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baifenhao"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="促销商店"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at13"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/donut"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/donut"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="甜品店"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at14"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/wind"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/windsock"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at15"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/support"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/support"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服在线"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
