<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffef9"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >
            <com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend
                android:id="@+id/slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linearlayout_news_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearlayout_images_slide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relativelayout_image_slide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:focusable="true" >

                            <android.support.v4.view.ViewPager
                                android:id="@+id/image_slide_page"
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                android:focusable="true" />

                            <RelativeLayout
                                android:id="@+id/layout_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:background="#55000000"
                                >

                                <RelativeLayout
                                    android:id="@+id/layout_bar_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/image_page_bg" >
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/tvSlideTitle"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:text="@string/title1"
                                        android:textColor="@android:color/white"
                                        android:textSize="13dip"
                                        />

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/slide_dian"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="vertical"
                            android:background="@android:color/white">

                            <LinearLayout
                                android:id="@+id/layout_circle_images"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="15dp"
                                android:gravity="right"
                                android:orientation="horizontal">

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend>



            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/slide"
                android:layout_marginTop="5dp"
                android:background="@color/colorwhite"
                >
            <FrameLayout
                android:id="@+id/layout_button1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape1"
                    android:text="餐厅概述"
                    android:textSize="13.5dp"
                    android:textColor="@color/colorwhite"
                    android:layout_marginTop="3dp"
                    />
            </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_button2"
                    android:layout_width="90dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape2"
                        android:text="餐厅全景"
                        android:textSize="13.5dp"
                        android:textColor="@color/colorwhite"
                        android:layout_marginTop="3dp"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_button3"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape3"
                        android:text="活动"
                        android:textSize="13.5dp"
                        android:textColor="@color/colorwhite"
                        android:layout_marginTop="3dp"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_button4"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape4"
                        android:text="企业文化"
                        android:textSize="13.5dp"
                        android:textColor="@color/colorwhite"
                        android:layout_marginTop="3dp"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:background="@color/colorwhite"
                android:layout_marginTop="1dp"
                >
            <TextView
                android:id="@+id/text_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜品预览"
                android:layout_marginLeft="3dp"
                android:textSize="13dp"
                android:textColor="@color/colorwhite"
                android:background="#fdb933"
                android:drawableLeft="@drawable/ic_local_dining_black_24dp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/preview"
                android:background="@color/colorwhite"
                >
                <FrameLayout
                    android:id="@+id/layout_at"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/chinese"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/veg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="菜类"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_at2"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/foreign"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/meet"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="肉类"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at3"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/pizza"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/soup"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="汤类"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at4"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/bar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/drink"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饮品"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at5"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/fastfood"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dessert"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="甜点"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layout_at6"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/rice"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/zhushi"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主食"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|center"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:background="@color/colorwhite"
                android:layout_marginTop="1dp"
                >
            <TextView
                android:id="@+id/text_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热销菜品"
                android:layout_marginLeft="3dp"
                android:textSize="13dp"
                android:textColor="@color/colorwhite"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_whatshot_black_24dp1"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/hot"
                >
                <com.example.a13051_000.buffetmealsystem.Order.ListViewForScrollView
                    android:id="@+id/list_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.example.a13051_000.buffetmealsystem.Order.ListViewForScrollView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
