<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.a13051_000.buffetmealsystem.MainActivity">
    <com.example.a13051_000.buffetmealsystem.Topbar
        android:id="@+id/topbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorButton"
        custom:title1="主页"
        custom:titleTextcolor="@color/colorwhite"
        custom:titleTextsize="9dp"
        ></com.example.a13051_000.buffetmealsystem.Topbar>


    <com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend
        android:id="@+id/slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar1"
        >

        <LinearLayout
            android:id="@+id/linearlayout_news_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayout_images_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativelayout_image_slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/image_slide_page"
                        android:layout_width="fill_parent"
                        android:layout_height="200dip"
                        android:focusable="true" />

                    <RelativeLayout
                        android:id="@+id/layout_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:background="#55000000"
                        style="@style/Transparent" >

                        <RelativeLayout
                            android:id="@+id/layout_bar_image"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/image_page_bg" >
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvSlideTitle"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:text="@string/title1"
                                android:textColor="@android:color/white"
                                android:textSize="13dip"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/slide_dian"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/layout_circle_images"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>

          </LinearLayout>

          </LinearLayout>

        </LinearLayout>
    </com.example.a13051_000.buffetmealsystem.xml.imagelayout.ScrollViewExtend>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/qrcode"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_marginStart="320dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/search"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/slide"
        >
            <FrameLayout
                android:id="@+id/layout_at"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/donut"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/donut"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特色"
                    android:layout_gravity="bottom|center"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_at2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/meet"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/meet"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="荤类"
                    android:layout_gravity="bottom|center"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_at3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/count"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baifenhao"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="促销购"
                    android:layout_gravity="bottom|center"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_at4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/drink"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/drop"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮品"
                    android:layout_gravity="bottom|center"
                    />
            </FrameLayout>
        <FrameLayout
            android:id="@+id/layout_at5"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/quickfood"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/muffin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快餐"
                android:layout_gravity="bottom|center"
                />
        </FrameLayout>

        </LinearLayout>
    </RelativeLayout>